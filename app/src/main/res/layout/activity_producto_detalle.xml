<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/clarorojo"
    tools:context=".ProductoDetalleActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="25dp"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="35dp"

        app:cardUseCompatPadding="true"
        android:elevation="4dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/nombredetallepro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/belgrano"
                    android:gravity="center"
                    android:text="Bio Aguaje"
                    android:textAllCaps="true"
                    android:textColor="@color/rojo"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:targetApi="jelly_bean" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <TextView
                    android:id="@+id/codigocategoriaDetCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100001"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/codigoproductoDetCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100001"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/imagenproductoDetCompra"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bio" />


                <TextView
                    android:id="@+id/descripcionproductoDetCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Bio Aguaje"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preciomensajeDetCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Precio S/ 2.80"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/precioproductoDetCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3.80"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonmenosDetCompra"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:backgroundTint="#DD1616"
                        android:src="@drawable/ic_menos"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:scaleType="fitCenter"
                         />

                    <EditText
                        android:id="@+id/cantidadproductoDetCompra"
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:inputType="number"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/buttonmasDetCompra"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_mas"
                        app:backgroundTint="#DD1616" />
                </LinearLayout>

                <TextView
                    android:id="@+id/totalpagoDetCompra"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:text="Total = S/ 150.00"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <Button
                    android:id="@+id/agregarcompraDetCompra"
                    android:layout_width="332dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_bg"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Agregar al carrito"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progress" />


                <Button
                    android:id="@+id/cancelarcompraDetCompra"
                    android:layout_width="332dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_bg"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginTop="10dp"
                    android:text="Cancelar"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progress" />

                <TextView
                    android:id="@+id/mensajeLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/aclonica"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
                    tools:targetApi="jelly_bean" />



            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>